{
  "name": "vue-pwa-timer-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:desktop": "npm run dev --workspace=apps/desktop",
    "dev:site": "npm run dev --workspace=apps/site",
    "build:web": "npm run build --workspace=apps/web",
    "build:desktop": "npm run build --workspace=apps/desktop",
    "build:site": "npm run build --workspace=apps/site",
    "build:all": "npm run build:web && npm run build:site",
    "test:web": "npm run test:unit --workspace=apps/web",
    "test:site": "npm run test:unit --workspace=apps/site",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist"
  },
  "devDependencies": {
    "prettier": "3.6.2"
  }
}
