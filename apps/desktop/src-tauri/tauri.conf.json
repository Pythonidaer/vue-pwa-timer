{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timer",
  "version": "0.1.0",
  "identifier": "com.timer.timer",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": false,
    "windows": [
      {
        "label": "main",
        "title": "Timer",
        "width": 280,
        "height": 64,
        "minWidth": 280,
        "minHeight": 64,
        "maxWidth": 280,
        "maxHeight": 420,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:window:allow-set-size",
            "core:window:allow-set-position"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": "Developer ID Application: Jonathan M Hammond (GW487VFKLS)",
      "providerShortName": null,
      "entitlements": null
    }
  },
  "plugins": {}
}
